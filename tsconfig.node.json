{
  "compilerOptions": {
    "composite": true,  // self added
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "target": "ES2022",
    "lib": ["ES2022"],  // self modified, original value: ES2023
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "node",  // self modified, original value: bundler
    // "allowImportingTsExtensions": true,  // self commented
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    // "noUncheckedSideEffectImports": true,  // self commented

    // The following are self added
    // "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
  },
  "include": ["vite.config.ts"]
}
